#!/usr/bin/env zsh

function aichat-clip() {
  clipboard=$(xclip -selection clipboard -out | tr -d '\r')

  if [ -z "$clipboard" ]; then
    echo "Clipboard is empty." >&2
    return 1
  fi

  block="```\n${clipboard}\n```"


  if [ $? -ne 0 ]; then
    return 1
  fi

  query="$1"

  echo -e "\e[1;37m$clipboard_block\e[0m"

  aichat -r help "$clipboard_block\n\n$query"
}

aichat-clip "$1"
